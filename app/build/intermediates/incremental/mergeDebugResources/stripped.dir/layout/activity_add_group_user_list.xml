<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddGroupUserList">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/userListRecycleView"
        android:layout_width="361dp"
        android:layout_height="606dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usrchoose" />

    <TextView
        android:id="@+id/usrchoose"
        style="@style/textMedium"
        android:layout_width="179dp"
        android:layout_height="57dp"
        android:layout_marginTop="16dp"
        android:text="@string/userChooseTestV"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/next2Btn"
        app:layout_constraintHorizontal_bias="0.346"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/next2Btn"
        style="@style/buttonBlueStyle"
        android:layout_width="149dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:text="@string/nextAddUsers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.938"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>