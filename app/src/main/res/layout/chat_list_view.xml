    tools:context=".ChatList">

    <TextView
        android:id="@+id/chatListHeader"
        style="@style/textBig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin24"
        android:layout_marginEnd="@dimen/margin24"
        android:text="@string/messages"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/personalMessage"
        style="@style/textBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin24"
        android:layout_marginStart="@dimen/margin24"
        android:layout_marginEnd="@dimen/margin24"
        android:text="@string/personalMessage"
        app:layout_constraintTop_toBottomOf="@id/chatListHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/personalMessageRecyclerView"
        app:layout_constraintTop_toBottomOf="@id/personalMessage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="@dimen/margin24" />

