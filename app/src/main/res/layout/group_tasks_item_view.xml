<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/radius">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/taskName"
            style="@style/textBlueMedium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="@dimen/padding"
            android:layout_marginBottom="@dimen/padding"
            android:text="@string/taskName"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/taskDeadlineLabel"
            style="@style/textBlueSmall"
            app:layout_constraintTop_toBottomOf="@id/taskName"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="@dimen/padding"
            android:layout_marginBottom="@dimen/padding"
            android:text="@string/deadline"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/taskDeadline"
            style="@style/textGreySmall"
            app:layout_constraintTop_toTopOf="@id/taskDeadlineLabel"
            app:layout_constraintLeft_toRightOf="@id/taskDeadlineLabel"
            android:layout_marginStart="@dimen/padding"
            android:text="@string/dateExample"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/taskAssigmentLabel"
            style="@style/textBlueSmall"
            app:layout_constraintTop_toBottomOf="@id/taskDeadlineLabel"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="@dimen/padding"
            android:text="@string/assigmentUser"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/taskAssigment"
            style="@style/textGreySmall"
            app:layout_constraintTop_toTopOf="@id/taskAssigmentLabel"
            app:layout_constraintLeft_toRightOf="@id/taskAssigmentLabel"
            android:layout_marginStart="@dimen/padding"
            android:text="@string/groupUserList"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/taskDoneCheck"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center_vertical"
            android:enabled="true"/>
        <!--TODO: check gravity-->

        <!--TODO: add remove_task button-->
        <!--TODO: add edit_task button-->

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>