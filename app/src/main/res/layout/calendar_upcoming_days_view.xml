<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CalendarUpcomingDays">

    <com.alamkanak.weekview.WeekView
        android:id="@+id/weekView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:columnGap="@dimen/columnGap"
        app:dayBackgroundColor="#05000000"
        app:dayNameLength="length_short"
        app:eventTextColor="@android:color/white"
        app:headerColumnPadding="@dimen/columnGap"
        app:headerColumnTextColor="#8f000000"
        app:headerRowBackgroundColor="#ffefefef"
        app:hourHeight="60dp"
        app:noOfVisibleDays="3"
        app:textSize="@dimen/calendarTextSize"
        app:todayHeaderTextColor="@color/accentBlue" />
</FrameLayout>