<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupList">

    <TextView
        android:id="@+id/groupUserListHeader"
        style="@style/textBig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin24"
        android:layout_marginEnd="@dimen/margin24"
        android:text="@string/groupUserList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/groupUserListRecyclerView"
        app:layout_constraintTop_toBottomOf="@id/groupUserListHeader"
        android:layout_margin="@dimen/margin24" />

    <!--TODO: button for add user (right bottom corner)-->

</androidx.constraintlayout.widget.ConstraintLayout>